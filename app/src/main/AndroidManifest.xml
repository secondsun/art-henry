<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.aerogear.apps.memeolist">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:name="org.aerogear.apps.memeolist.MemeolistApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme.Base"
        tools:replace="android:icon">
        <activity
            android:name="org.aerogear.apps.memeolist.MainActivity"
            android:label="@string/app_name">
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.MAIN" />-->

            <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
        <activity android:name="com.feedhenry.sdk.oauth.FHOAuthIntent" />
        <activity
            android:name="org.aerogear.apps.memeolist.ImagePickerActivity"
            android:icon="@mipmap/ic_launcher"
            android:theme="@style/MyTheme.Base"
            android:label="@string/meme_list_label">
            <intent-filter>
                <action android:name="com.fh.ImagePickerActivity" />
            </intent-filter>
        </activity>
        <activity android:name="org.aerogear.apps.memeolist.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="org.aerogear.apps.memeolist.service.UploadService" />

    </application>

</manifest>
